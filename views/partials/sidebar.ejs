<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/dashboard" class="brand-link">
    <img
      src="/images/logo.svg"
      alt="Admin Store GG Logo"
      class="brand-image img-circle"
    />
    <span class="brand-text font-weight-light">Admin Store GG</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel pb-3 mb-3 d-flex">

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul
        class="nav nav-pills nav-sidebar flex-column"
        data-widget="treeview"
        role="menu"
        data-accordion="false"
      >
      <% 
      
        const home = title === 'Home' ? 'active' : '';
        const nominal = title === 'Nominal' || title === 'Edit Nominal' || title === 'Tambah Nominal' ? 'active' : '';
        const category = title === 'Kategori' || title === 'Edit Kategori' || title === 'Tambah Kategori' ? 'active' : '';
        const voucher = title === 'Voucher' || title === 'Edit Voucher' || title === 'Tambah Voucher' ? 'active' : '' || title === 'Detail Voucher' ? 'active' : '';
        const bank = title === 'Bank' || title === 'Edit Bank' || title === 'Tambah Bank' ? 'active' : '';
        const payment = title === 'Payment' || title === 'Edit Payment' || title === 'Tambah Payment' ? 'active' : '';
        const transaction = title === 'Transaksi' ? 'active' : '';
         
      %>
        <li class="nav-item">
          <a href="/dashboard" class="nav-link <%= home %>" >
            <i class="nav-icon fas fa-home"></i>
            <p>Beranda</p>
          </a>
        </li>
        <li class="nav-header">Master</li>
        <li class="nav-item">
          <a href="/category" class="nav-link <%= category %>">
            <i class="nav-icon far fa-calendar-alt"></i>
            <p>Kategori</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="/nominal" class="nav-link <%= nominal %>">
            <i class="nav-icon fas fa-tasks"></i>
            <p>Nominal</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="/voucher" class="nav-link <%= voucher %>">
            <i class="nav-icon far fa-image"></i>
            <p>Voucher</p>
          </a>
        </li>
        <li class="nav-header">Metode Pembayaran</li>
        <li class="nav-item">
          <a href="/bank" class="nav-link <%= bank %>">
            <i class="nav-icon fas fa-money-check"></i>
            <p>Bank</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="/payment" class="nav-link <%= payment %>">
            <i class="nav-icon fas fa-money-check-alt"></i>
            <p>Jenis Pembayaran</p>
          </a>
        </li>
        <li class="nav-header">Transaksi</li>
        <li class="nav-item">
          <a href="/transaction" class="nav-link <%= transaction %> ">
            <i class="nav-icon fas fa-shopping-cart"></i>
            <p>Transaksi</p>
          </a>
        </li>
      </ul>
    </nav>
    <!--  /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
