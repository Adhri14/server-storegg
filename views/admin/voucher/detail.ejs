<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %><% include
../../partials/loading.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Detail Game</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Detail Game <%= voucher.name %></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img
                      src="https://adhri-storegg.herokuapp.com/uploads/<%= voucher.thumbnail %>"
                      class="img-fluid rounded-start"
                      alt="..."
                    />
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= voucher.name %></h5>
                      <p class="card-text">
                        <small class="text-muted"
                          ><%= voucher.category?.name %>
                        </small>
                      </p>
                      <div class="row">
                        <% voucher.nominals.forEach(item => { %>
                        <div class="col-sm-6">
                          <ul class="list-group">
                            <li class="list-group-item">
                              <%= item.cointName %> <%= item.cointQuantity %>
                            </li>
                            <% const price = item.price; const replceToMoney =
                            new Intl.NumberFormat('id-ID').format(price) %>
                            <li class="list-group-item">
                              Rp. <%= replceToMoney %>
                            </li>
                          </ul>
                        </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        $("#perview").attr("src", e.target.result);
        $("#perview").attr("width", "10%");
        $("#perview").attr("height", "10%");
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  $("#image").change(function () {
    readURL(this);
  });
</script>
